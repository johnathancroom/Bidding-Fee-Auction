<% if session[:user].nil? %>
  <%= form_tag login_users_path, :id => "form_login" do %>
    <%= 
    text_field_tag :username, (flash[:username] if flash[:username]), 
      :placeholder => "Username", 
      :class => ("error" if flash[:error] && flash[:error][:field] == "username") 
    %><%=
    password_field_tag :password, "", 
      :placeholder => "Password", 
      :class => ("error" if flash[:error] && flash[:error][:field] == "password")
    %>
    <a href="#">Forgot password?</a>
    <%= submit_tag "Login" %>
  <% end %>
<% else %>
  <%= form_tag logout_users_path do %>
    <%= session[:user].username %>
    <%= submit_tag "Logout" %>
  <% end %>
<% end %>